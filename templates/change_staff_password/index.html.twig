{% extends 'base.html.twig' %}

{% block title %}Change Admin Password{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .password-card {
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 2rem;
        max-width: 500px;
        margin: 0 auto;
    }
    
    .password-card h2 {
        color: #198754;
        font-weight: 600;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    
    .form-label {
        color: #6c757d;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }
    
    .form-control {
        border: 1px solid #e9ecef;
        border-radius: 6px;
        padding: 0.75rem;
        transition: all 0.2s;
    }
    
    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.1);
    }
    
    .input-group .btn {
        border: 1px solid #e9ecef;
        border-left: none;
        background: white;
        color: #6c757d;
        transition: all 0.2s;
    }
    
    .input-group .btn:hover {
        color: #198754;
        background: #f8f9fa;
    }
    
    .btn-primary {
        background: #198754;
        border: 1px solid #198754;
        padding: 0.75rem;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.2s;
    }
    
    .btn-primary:hover {
        background: #157347;
        border-color: #157347;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(25, 135, 84, 0.2);
    }
    
    .invalid-feedback {
        color: #dc3545;
        font-size: 0.875rem;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}

{% block admin_page_title %}Change Password{% endblock %}

{% block admin_content %}
<div class="password-card">
    <h2>Change Password</h2>

    {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.currentPassword) }}
            <div class="input-group">
                {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control', 'id': 'currentPassword'}}) }}
                <button type="button" class="btn" onclick="togglePass('currentPassword')">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
            {{ form_errors(form.currentPassword) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.newPassword.first) }}
            <div class="input-group">
                {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control', 'id': 'newPassword1'}}) }}
                <button type="button" class="btn" onclick="togglePass('newPassword1')">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
            {{ form_errors(form.newPassword.first) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.newPassword.second) }}
            <div class="input-group">
                {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control', 'id': 'newPassword2'}}) }}
                <button type="button" class="btn" onclick="togglePass('newPassword2')">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
            {{ form_errors(form.newPassword.second) }}
        </div>

        <button type="submit" class="btn btn-primary w-100">Update Password</button>

    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    function togglePass(id) {
        let input = document.getElementById(id);
        input.type = input.type === "password" ? "text" : "password";
    }
</script>
{% endblock %}