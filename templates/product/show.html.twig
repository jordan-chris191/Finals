{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block admin_content %}

<div class="product-details-container">

    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">{{ product.name }}</h1>

        <div class="action-buttons">
            <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="card shadow-sm p-4">

        <div class="row">
            <!-- Image Section -->
            <div class="col-md-4 text-center mb-3">
                {% if product.image %}
                    <img 
                        src="{{ asset('uploads/products/' ~ product.image) }}" 
                        alt="{{ product.name }}" 
                        class="img-fluid rounded shadow-sm product-image-preview"
                    >
                {% else %}
                    <div class="no-image-placeholder">
                        <i class="fas fa-image fa-4x text-muted"></i>
                        <p class="text-muted mt-2">No Image Uploaded</p>
                    </div>
                {% endif %}
            </div>

            <!-- Details Section -->
            <div class="col-md-8">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th width="25%">ID</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ product.description }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td><strong>${{ product.price|number_format(2, '.', ',') }}</strong></td>
                        </tr>
                        <tr>
                            <th>Created By</th>
                            <td>{{ product.createdBy ? product.createdBy.username : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td>{{ product.createdAt ? product.createdAt|date('M d, Y H:i') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Updated At</th>
                            <td>{{ product.updatedAt ? product.updatedAt|date('M d, Y H:i') : '-' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>

<style>
    .product-image-preview {
        max-height: 280px;
        object-fit: cover;
        border-radius: 12px;
    }

    .no-image-placeholder {
        padding: 40px;
        border: 2px dashed #ccc;
        border-radius: 12px;
    }

    .page-title {
        font-size: 1.8rem;
        font-weight: 600;
    }

    .action-buttons a,
    .action-buttons button {
        margin-left: 8px;
    }

    .card {
        border-radius: 12px;
    }
</style>

{% endblock %}
