{% extends 'base.html.twig' %}

{% block title %}Admin Profile{% endblock %}

{% block admin_page_title %}My Profile{% endblock %}

{% block admin_content %}
<div class="profile-container">
    
    {# Profile Header #}
    <div class="profile-header">
        <div class="profile-avatar">
            {{ app.user.name|slice(0, 1)|upper }}
        </div>
        <div class="profile-name">{{ app.user.name }}</div>
        <div class="profile-username">@{{ app.user.username }}</div>
        <div class="profile-roles">
            {% for role in app.user.roles %}
                <span class="role-badge">{{ role|replace({'ROLE_': ''})|title }}</span>
            {% endfor %}
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            {# Account Information #}
            <div class="profile-info">
                <div class="info-section-title">Account Information</div>
                
                <div class="info-row">
                    <div class="info-label">Full Name</div>
                    <div class="info-value">{{ app.user.name }}</div>
                </div>
                
                <div class="info-row">
                    <div class="info-label">Username</div>
                    <div class="info-value">{{ app.user.username }}</div>
                </div>
                
                <div class="info-row">
                    <div class="info-label">Email Address</div>
                    <div class="info-value">{{ app.user.email }}</div>
                </div>
                
                <div class="info-row">
                    <div class="info-label">Account Type</div>
                    <div class="info-value">
                        {% for role in app.user.roles %}
                            <span class="role-badge">{{ role|replace({'ROLE_': ''})|title }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# Activity Information #}
            <div class="profile-info">
                <div class="info-section-title">Activity Information</div>
                
                <div class="info-row">
                    <div class="info-label">Member Since</div>
                    <div class="info-value">{{ app.user.createdAt|date('F d, Y') }}</div>
                </div>
                
                {% if app.user.updatedAt %}
                <div class="info-row">
                    <div class="info-label">Last Updated</div>
                    <div class="info-value">{{ app.user.updatedAt|date('F d, Y h:i A') }}</div>
                </div>
                {% endif %}
            </div>
        </div>

        <div class="col-lg-4">
            {# Quick Actions #}
            <div class="profile-actions">
                <div class="action-title">Quick Actions</div>
                
                <a href="{{ path('app_change_admin_password') }}" class="action-btn btn-primary-action">
                    <i class="fas fa-key"></i> Change Password
                </a>
                
                <a href="#" class="action-btn">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
                
                <a href="{{ path('app_admin_dashboard') }}" class="action-btn">
                    <i class="fas fa-tachometer-alt"></i> Go to Dashboard
                </a>
                
                <a href="{{ path('app_logout') }}" class="action-btn">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </div>

</div>
{% endblock %}